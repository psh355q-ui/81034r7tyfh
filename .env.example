# AI Trading System - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys
# =============================================================================

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alpha Vantage API (for stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# NewsAPI (for news data)
NEWSAPI_KEY=your_newsapi_key_here

# =============================================================================
# AI Model Configuration
# =============================================================================

# Gemini Model Selection
# Options: gemini-2.5-flash, gemini-2.5-pro, gemini-2.0-flash-exp
# Default: gemini-2.5-flash (fastest, cheapest)
GEMINI_MODEL=gemini-2.5-flash

# OpenAI Model Selection
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo
# Default: gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini

# Claude Model Selection
# Options: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
# Default: claude-3-haiku-20240307
CLAUDE_MODEL=claude-3-haiku-20240307

# =============================================================================
# Korean Investment & Securities (KIS) API
# =============================================================================

# KIS API Credentials (for live trading)
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here
KIS_ACCOUNT_NUMBER=your_account_number_here
KIS_ACCOUNT_TYPE=01  # 01: 종합계좌, 02: 위탁계좌

# KIS Environment
# Options: real, virtual
# Default: virtual (paper trading)
KIS_ENVIRONMENT=virtual

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# SQLite (for development)
SQLITE_DB_PATH=./data/trading.db

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/Disable Features
ENABLE_AUTO_TRADING=false
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_TELEGRAM_NOTIFICATIONS=false

# Debug Mode
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Notification Configuration
# =============================================================================

# Slack Webhook URL
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# Trading Configuration
# =============================================================================

# Risk Management
MAX_POSITION_SIZE_PCT=10  # Maximum 10% of portfolio per position
MAX_DAILY_LOSS_PCT=5      # Stop trading if daily loss exceeds 5%
MAX_PORTFOLIO_DRAWDOWN_PCT=20  # Circuit breaker at 20% drawdown

# Trading Hours (KST)
TRADING_START_TIME=09:00
TRADING_END_TIME=15:30

# =============================================================================
# RSS Feed Configuration
# =============================================================================

# RSS Crawl Interval (in minutes)
RSS_CRAWL_INTERVAL=60

# Maximum articles per feed
MAX_ARTICLES_PER_FEED=50

# =============================================================================
# Monitoring & Metrics
# =============================================================================

# Prometheus Metrics Port
METRICS_PORT=9090

# Health Check Port
HEALTH_CHECK_PORT=8080

# =============================================================================
# Security
# =============================================================================

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# =============================================================================
# External Services
# =============================================================================

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Celery (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
